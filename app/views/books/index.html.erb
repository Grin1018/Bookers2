<main>
  <p id="notice"></p>
  <diq class="container">
  <div class ="row">
  <div class="col-md-3">
<h1>User info</h1>

<% if @user.image.attached? %>
<%= image_tag @user.image, size: "100x100" %>
<% else %>
<%= image_tag 'noimage', size: "100x100" %>
<% end %>

<table class = "table">
<tbody>
  <tr></tr>
  <tr>
  <th>name<th><br>
  </tr>
  <tr>
  <th>introduction<th>
    </tr>
    </tbody>
    </table>

    <div class ="row">
        <%= link_to edit_user_path(@user.id) do %>
     <i class="fas fa-user-cog"></i>
     <% end %>
     </div>

 <h2 class="mt-3">New book</h2>

<%= form_with model:@book do |f| %>

<div class="form-group">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>

<div class="form-group">
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
</div>

<div class="form-group">
  <%= f.submit 'Create Book' %>
</div>
<% end %>

<div class ="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  <p>Opinion</p>
  <span><%= book.title %></span>

<% end %>
</table>
</div>
</div>
</div>
</div>
</main>

